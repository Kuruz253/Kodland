import random

# 1. Zmienna ze wszystkimi znakami
elementy = "-+/~*!&$#?=@abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"

# 2. Pobranie długości hasła od użytkownika
dlugosc = int(input("Podaj długość hasła: "))

# 3. Zmienna do przechowywania wygenerowanego hasła
haslo = ""

# 4. Generowanie hasła — wybór losowych znaków 
# pętla-for zmienna-i zmienna-haslo 
for i in range(dlugosc):
    haslo += random.choice(elementy)

# 5. Wypisanie hasła
print("Wygenerowane hasło:", haslo)
